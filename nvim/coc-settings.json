{
  // auto format these filetypes on save
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql", "html", "yaml",  "json", "python"],

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // snippets config
  "snippets.ultisnips.directories":
  [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ],
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",

  // emoji support for md
  "coc.source.emoji.filetypes": ["markdown"],

  // explorer
  "explorer.width": 30,
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevIcons": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  // lsp
  "languageserver": {
    "julia": {
      "command": "julia",
      "args" : [
        "--startup-file=no",
        "--history-file=no",
        "-e",
        "using LanguageServer;",
        "using Pkg;",
        "import StaticLint;",
        "import SymbolServer;",
        "server = LanguageServer.LanguageServerInstance(stdin, stdout);",
        "server.runlinter = true;",
        "run(server);"
      ],
      "filetypes": ["julia"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

}
